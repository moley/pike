export GRADLE_HOME=`pwd`/gradle
export JAVA_HOME=`pwd`/jdk
export PATH=$GRADLE_HOME/bin:$JAVA_HOME/bin:$PATH

echo "GRADLE_HOME set to $GRADLE_HOME and added to PATH"
echo "JAVA_HOME set to $JAVA_HOME and added to PATH"
echo "Startparameter = $1"
echo "Using java from `which java`"
echo "Starting $*"

chmod a+x $JAVA_HOME/bin/java
chmod a+x $GRADLE_HOME/bin/gradle

gradle -b bootstrapbuild.gradle $* --stacktrace